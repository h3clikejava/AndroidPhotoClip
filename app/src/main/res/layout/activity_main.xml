<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ClipSquareImageView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <LinearLayout
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:textColor="#000"
            android:textSize="22sp"
            android:text="@string/cancel"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/doneBtn"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="22sp"
            android:text="@string/done"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <com.h3c.androidclipsquare.ClipSquareImageView
        android:id="@+id/clipSquareIV"
        ClipSquareImageView:ClipSquareIV_BorderDistance="10dp"
        ClipSquareImageView:ClipSquareIV_OutsideColor="#f2ffffff"
        ClipSquareImageView:ClipSquareIV_BorderColor="#f2ffffff"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <LinearLayout
            android:id="@+id/btn1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <View
                android:id="@+id/v1"
                android:layout_marginBottom="7dp"
                android:background="@drawable/rect_border"
                android:layout_width="16dp"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/t1"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:text="9:16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn2"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <View
                android:id="@+id/v2"
                android:layout_marginBottom="7dp"
                android:background="@drawable/rect_border"
                android:layout_width="21dp"
                android:layout_height="28dp" />

            <TextView
                android:id="@+id/t2"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:text="3:4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn3"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <View
                android:id="@+id/v3"
                android:layout_marginBottom="7dp"
                android:background="@drawable/rect_red_border"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/t3"
                android:textSize="12sp"
                android:textColor="@android:color/holo_red_dark"
                android:text="1:1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn4"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <View
                android:id="@+id/v4"
                android:layout_marginBottom="7dp"
                android:background="@drawable/rect_border"
                android:layout_width="28dp"
                android:layout_height="21dp" />

            <TextView
                android:id="@+id/t4"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:text="4:3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn5"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <View
                android:id="@+id/v5"
                android:layout_marginBottom="7dp"
                android:background="@drawable/rect_border"
                android:layout_width="32dp"
                android:layout_height="16dp" />

            <TextView
                android:id="@+id/t5"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:text="16:9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
